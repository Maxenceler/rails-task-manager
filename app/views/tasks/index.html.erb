<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <% if task.completed == true %>
    <li><%= link_to "[x] #{task.title}", task_path(task) %></li>
    <% else %>
    <li><%= link_to " [ ] #{task.title}", task_path(task) %></li>
    <% end %>
  <% end %>
</ul>

<%= link_to "Create a task",  new_task_path, class: "button" %>
